library identifier: "pipeline-library@v1.6",
retriever: modernSCM(
  [
    $class: "GitSCMSource",
    remote: "https://github.com/redhat-cop/pipeline-library.git"
  ]
)

pipeline {
    agent {
        label 'maven'
    }

    stages {
        stage('Git Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Maven Build') {
            steps {
                dir('sim-rag-score') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Container Build') {
            steps {
                binaryBuild(projectName: 'cicd', buildConfigName: 'sim-rag-score', buildFromPath: 'sim-rag-score')
            }
        }
    }
}